<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_calculo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.practicafisica.Calculo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="13">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cálculos"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.Inductacia"
                    android:layout_weight="1"
                    android:textSize="22dp"
                    android:layout_marginBottom="30dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:hint="Ingrese la longitud:"
                        android:layout_height="match_parent"
                        android:id="@+id/txtLongitud"
                        android:layout_marginBottom="20dp"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:hint="Ingrese el diámetro:"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtDiametro"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:hint="Ingrese número de espiras:"
                        android:layout_height="match_parent"
                        android:id="@+id/txtEspiras"
                        android:layout_marginBottom="20dp"
                        android:inputType="number" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtResultado"
                    android:textSize="23dp"
                    android:layout_gravity="center"
                    android:hint="Resultado"
                    android:layout_marginBottom="10dp"
                    android:editable="false" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCalcular"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:text="Calcular"
                    android:layout_marginBottom="25dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.Capacitancia"
                    android:textSize="22dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="20dp"
                        android:hint="Ingrese la longitud:"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtCapa1" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:hint="Ingrese el diámetro:"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/txtCapa2" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:hint="Ingrese número de espiras:"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/txtCapa3" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtResultado2"
                    android:textSize="23dp"
                    android:layout_gravity="center"
                    android:hint="Resultado"
                    android:layout_marginBottom="15dp"
                    android:enabled="false" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCalcular2"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:text="Calcular"
                    android:textSize="18sp" />

                <Button
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMenu1"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:text="Menú"
                    android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
